<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#232F34"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="#f9aa33"
        android:layout_height="wrap_content"
        app:boxCornerRadiusTopStart="50dp"
        app:boxCornerRadiusBottomEnd="50dp"
        android:hint="Search"
        app:boxBackgroundColor="@color/colorPrimary"
        android:layout_gravity="center"
        app:placeholderText="eg: movies, sports, etc"
        android:textColorHint="#F9AA33"
        android:background="@color/colorPrimary"
        app:endIconCheckable="true"
        app:hintTextColor="#F9AA33"
        app:placeholderTextColor="#F9AA33"
        app:boxStrokeWidth="0dp"
        app:startIconDrawable="@drawable/ic_baseline_arrow_forward_ios"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="true"
            android:scrollbarSize="1dp">
            <Button
                android:id="@+id/btn1"
                android:layout_margin="5dp"
                android:backgroundTint="#344955"
                android:textColor="#F9AA33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="general"/>
            <Button
                android:id="@+id/btn2"
                android:layout_margin="5dp"
                android:backgroundTint="#344955"
                android:textColor="#F9AA33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="business"/>
            <Button
                android:id="@+id/btn3"
                android:layout_margin="5dp"
                android:backgroundTint="#344955"
                android:textColor="#F9AA33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entertainment"/>
            <Button
                android:id="@+id/btn4"
                android:layout_margin="5dp"
                android:backgroundTint="#344955"
                android:textColor="#F9AA33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="health"/>
            <Button
                android:id="@+id/btn5"
                android:layout_margin="5dp"
                android:backgroundTint="#344955"
                android:textColor="#F9AA33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="science"/>
            <Button
                android:id="@+id/btn6"
                android:layout_margin="5dp"
                android:backgroundTint="#344955"
                android:textColor="#F9AA33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sports"/>
            <Button
                android:id="@+id/btn7"
                android:layout_margin="5dp"
                android:backgroundTint="#344955"
                android:textColor="#F9AA33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="technology"/>


        </LinearLayout>

    </HorizontalScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"/>

</LinearLayout>